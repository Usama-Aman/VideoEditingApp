<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blurryBlack"
    android:paddingBottom="@dimen/_10sdp">


    <TextView
        android:id="@+id/dTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/appBackground"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Rename Video"
        android:textAlignment="center"
        android:textColor="@color/textColorDarkWhite"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/enterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="Rename Video"
        android:textAlignment="center"
        android:textColor="@color/textColorDarkWhite"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dTitle" />

    <EditText
        android:id="@+id/etDialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/dialog_edittext_backgroun"
        android:fontFamily="@font/poppins_regular"
        android:lines="1"
        android:maxLines="1"
        android:minLines="1"
        android:padding="@dimen/_4sdp"
        android:singleLine="true"
        android:textColor="@color/textColorDarkWhite"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/enterTitle" />


    <TextView
        android:id="@+id/btnSave"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/green_button_drawable"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text="SAVE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etDialog" />


    <TextView
        android:id="@+id/btnCancel"
        android:layout_width="@dimen/_55sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/grey_button_drawable"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:text="CANCEL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@id/etDialog" />


</androidx.constraintlayout.widget.ConstraintLayout>